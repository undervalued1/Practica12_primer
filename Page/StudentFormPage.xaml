<Page x:Class="WpfApp1.Page.StudentFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="StudentFormPage">

    <Grid>
        <StackPanel>
            <StackPanel>
                <Label>Фамилия</Label>
                <TextBox Text="{Binding LastName}"/>
            </StackPanel>
            <StackPanel>
                <Label>Имя</Label>
                <TextBox Text="{Binding FirstName}"/>
            </StackPanel>
            <StackPanel>
                <Label>Отчество</Label>
                <TextBox Text="{Binding MiddleName}"/>
            </StackPanel>
            <StackPanel>
                <Label>Дата рождения</Label>
                <DatePicker SelectedDate="{Binding Birthday}"/>
            </StackPanel>
            <StackPanel>
                <Label>Серия паспорта</Label>
                <TextBox Text="{Binding Passport.Series}"/>
            </StackPanel>
            <StackPanel>
                <Label>Номер паспорта</Label>
                <TextBox Text="{Binding Passport.Number}"/>
            </StackPanel>
            <StackPanel>
                <Button Click="save">Сохранить в БД</Button>
                <Button Click="back">Назад</Button>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Page>
